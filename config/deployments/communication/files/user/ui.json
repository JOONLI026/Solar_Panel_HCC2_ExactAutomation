{
  "type": "section",
  "details": {
    "title": "Communication",
    "label": "communication",
    "position": "3",
    "id": "communication",
    "url": "/communication"
  },
  "content": [
    {
      "id": "SerialPortsTab",
      "title": "Serial Ports",
      "layout": [
        {
          "SerialPortsTable": {
            "xs": 12
          }
        }
      ],
      "ui": {
        "SerialPortsTable": {
          "type": "table",
          "title": "Serial Ports",
          "rows": 7,
          "keyPath": "portName",
          "customizeCells": [
            {
              "rowId": "RS232",
              "columnId": "terminate",
              "default": false
            }
          ],
          "template": [
            {
              "master": true,
              "title": "Port",
              "name": "portName",
              "enum": ["RS485-1", "RS485-2", "RS485-3", "RS485-4", "RS485-5", "RS232"],
              "type": "label",
              "value": "RS485-${i}",
              "width": 100,
              "pinned": "left"
            },
            {
              "title": "Baud",
              "type": "select",
              "name": "baud",
              "width": 100,
              "options": [
                {
                  "id": "300",
                  "value": "300"
                },
                {
                  "id": "600",
                  "value": "600"
                },
                {
                  "id": "1200",
                  "value": "1200"
                },
                {
                  "id": "2400",
                  "value": "2400"
                },
                {
                  "id": "4800",
                  "value": "4800"
                },
                {
                  "id": "9600",
                  "value": "9600"
                },
                {
                  "id": "19200",
                  "value": "19200"
                },
                {
                  "id": "38400",
                  "value": "38400"
                },
                {
                  "id": "57600",
                  "value": "57600"
                },
                {
                  "id": "115200",
                  "value": "115200"
                }
              ]
            },
            {
              "title": "Parity",
              "type": "select",
              "name": "parity",
              "width": 100,
              "options": [
                {
                  "id": "none",
                  "value": "None"
                },
                {
                  "id": "even",
                  "value": "Even"
                },
                {
                  "id": "odd",
                  "value": "Odd"
                }
              ]
            },
            {
              "title": "Stop",
              "type": "select",
              "name": "stopBits",
              "width": 100,
              "options": [
                {
                  "id": "1",
                  "value": "1 bits"
                },
                {
                  "id": "1.5",
                  "value": "1.5 bits"
                },
                {
                  "id": "2",
                  "value": "2 bits"
                }
              ]
            },
            {
              "title": "Terminate",
              "type": "toggle",
              "name": "terminate",
              "width": 100,
              "disableRowIds": ["RS232", "RS-262-6"]
            },
            {
              "title": "Rx Bus Timeout (ms)",
              "type": "textInput",
              "dataType": "number",
              "name": "rxBusTimeout",
              "width": 140,
              "min": 0,
              "max": 10000,
              "customErrorMsgs": {
                "checkRange": "Please enter a floating-point number between 0.2 and 10000"
              }
            },
            {
              "title": "Tx Bus Delay (ms)",
              "type": "textInput",
              "dataType": "number",
              "name": "txBusDelay",
              "width": 130,
              "min": 0,
              "max": 10000,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 0 and 10000"
              }
            },
            {
              "title": "Protocol",
              "type": "select",
              "name": "protocol",
              "width": 150,
              "options": [
                {
                  "id": "disabled",
                  "value": "Disabled"
                },
                {
                  "id": "modbusRtu",
                  "value": "Modbus RTU Server"
                },
                {
                  "id": "modbusClient",
                  "value": "Modbus Client"
                }
              ]
            }
          ]
        }
      }
    },
    {
      "id": "ServerTCPPortsTab",
      "title": "Server TCP Ports",
      "layout": [
        {
          "ServerTCPPortsTable": {
            "xs": 12
          }
        }
      ],
      "ui": {
        "ServerTCPPortsTable": {
          "type": "table",
          "title": "Server TCP Ports",
          "rows": 2,
          "keyPath": "portName",
          "template": [
            {
              "master": true,
              "title": "Port Name",
              "name": "portName",
              "enum": ["TCP-502", "TCP-503"],
              "type": "label",
              "value": "TCP-${i}",
              "width": 100,
              "pinned": "left"
            },
            {
              "title": "Server/Client",
              "type": "label",
              "name": "serverClient",
              "width": 100
            },
            {
              "title": "Port Number",
              "type": "label",
              "name": "portNumber",
              "width": 100
            },
            {
              "title": "Max Connections",
              "type": "textInput",
              "dataType": "integer",
              "name": "maxClientConnections",
              "width": 130,
              "min": 1,
              "max": 16,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 1 and 16"
              }
            },
            {
              "title": "Max Transactions",
              "type": "textInput",
              "dataType": "integer",
              "name": "maxQueuedTransactions",
              "width": 130,
              "min": 1,
              "max": 16,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 1 and 16"
              }
            },
            {
              "title": "Socket Timeout (s)",
              "type": "textInput",
              "dataType": "integer",
              "name": "socketTimeout",
              "width": 130,
              "min": 0,
              "max": 65535,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 0 and 65535"
              }
            },
            {
              "title": "Rx Bus Timeout (ms)",
              "type": "textInput",
              "dataType": "number",
              "name": "rxBusTimeout",
              "width": 140,
              "min": 0,
              "max": 10000,
              "customErrorMsgs": {
                "checkRange": "Please enter a floating-point number between 0.1 and 10000"
              }
            },
            {
              "title": "Tx Bus Delay (ms)",
              "type": "textInput",
              "dataType": "number",
              "name": "txBusDelay",
              "width": 130,
              "min": 0,
              "max": 250,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 0 and 250"
              }
            },
            {
              "title": "Protocol",
              "type": "select",
              "name": "protocol",
              "width": 130,
              "showIf": "parameters.",
              "options": [
                {
                  "id": "disabled",
                  "value": "Disabled"
                },
                {
                  "id": "modbusTcp",
                  "value": "Modbus TCP Server"
                },
                {
                  "id": "modbusRtu",
                  "value": "Modbus RTU Server"
                }
              ]
            }
          ]
        }
      }
    },
    {
      "id": "ClientTCPPortsTab",
      "title": "Client TCP Ports",
      "layout": [
        {
          "ClientTCPPortsTable": {
            "xs": 12
          }
        }
      ],
      "ui": {
        "ClientTCPPortsTable": {
          "type": "table",
          "title": "Client TCP Ports",
          "rows": 4,
          "keyPath": "portName",
          "template": [
            {
              "master": true,
              "title": "Port Name",
              "name": "portName",
              "enum": ["TCP-Client1", "TCP-Client2", "TCP-Client3", "TCP-Client4"],
              "type": "label",
              "value": "TCP-Client${i}",
              "width": 100,
              "pinned": "left"
            },
            {
              "title": "Server/Client",
              "type": "label",
              "name": "serverClient",
              "width": 100
            },
            {
              "title": "Port Number",
              "type": "label",
              "name": "portNumber",
              "width": 100
            },
            {
              "title": "Max Connections",
              "type": "textInput",
              "dataType": "integer",
              "name": "maxClientConnections",
              "width": 130,
              "min": 1,
              "max": 32,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 1 and 32"
              }
            },
            {
              "title": "Max Transactions",
              "type": "textInput",
              "dataType": "integer",
              "name": "maxQueuedTransactions",
              "width": 130,
              "min": 1,
              "max": 16,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 1 and 16"
              }
            },
            {
              "title": "Socket Timeout (s)",
              "type": "textInput",
              "name": "socketTimeout",
              "width": 130,
              "disableCell": {
                "field": "serverClient",
                "disabledIf": "Client"
              }
            },
            {
              "title": "Rx Bus Timeout (ms)",
              "type": "textInput",
              "dataType": "number",
              "name": "rxBusTimeout",
              "width": 140,
              "min": 0,
              "max": 10000,
              "customErrorMsgs": {
                "checkRange": "Please enter a floating-point number between 0.1 and 10000"
              }
            },
            {
              "title": "Tx Bus Delay (ms)",
              "type": "textInput",
              "dataType": "number",
              "name": "txBusDelay",
              "width": 130,
              "min": 0,
              "max": 250,
              "customErrorMsgs": {
                "checkIsEmpty": "Please enter a floating-point number between 0 and 250"
              }
            },
            {
              "title": "Protocol",
              "type": "select",
              "name": "protocol",
              "width": 150,
              "showIf": "parameters.",
              "options": [
                {
                  "id": "disabled",
                  "value": "Disabled"
                },
                {
                  "id": "modbusClient",
                  "value": "Modbus Client"
                }
              ]
            }
          ]
        }
      }
    }
  ]
}
