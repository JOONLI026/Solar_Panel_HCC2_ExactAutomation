{
  "device_info": {
    "name": "HCC2_Solar_Controller",
    "description": "Solar panel monitoring and control system"
  },
  "digital_inputs": [
    {
      "name": "Panel_Connected",
      "description": "Solar panel connection status",
      "physical_channel": 1,
      "modbus_address": 10001,
      "active_state": "high"
    },
    {
      "name": "Overload_Protection",
      "description": "System overload protection trigger",
      "physical_channel": 2,
      "modbus_address": 10002,
      "active_state": "low"
    }
  ],
  "digital_outputs": [
    {
      "name": "System_Enable",
      "description": "Enable solar panel system",
      "physical_channel": 1,
      "modbus_address": 20001,
      "default_state": "low"
    },
    {
      "name": "Alarm_Buzzer",
      "description": "Alarm buzzer for faults",
      "physical_channel": 2,
      "modbus_address": 20002,
      "default_state": "low"
    }
  ],
  "analog_inputs": [
    {
      "name": "Solar_Voltage",
      "description": "Solar panel voltage",
      "physical_channel": 1,
      "modbus_address": 30001,
      "scale_factor": 0.01,
      "units": "volts",
      "min_value": 0,
      "max_value": 50
    },
    {
      "name": "Solar_Current",
      "description": "Solar panel current",
      "physical_channel": 2,
      "modbus_address": 30002,
      "scale_factor": 0.001,
      "units": "amps",
      "min_value": 0,
      "max_value": 10
    }
  ],
  "analog_outputs": [
    {
      "name": "Fan_Speed_Control",
      "description": "Cooling fan speed control",
      "physical_channel": 1,
      "modbus_address": 40001,
      "scale_factor": 0.1,
      "units": "percent",
      "min_value": 0,
      "max_value": 100
    }
  ]
}
